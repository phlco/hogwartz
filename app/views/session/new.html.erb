<form action="/login" method="post">
  <label for="name">Name</label>
  <input type="text" name="name">
  <label for="password">Password</label>
  <input type="password" name="password">
  <button>Login</button>
</form>

<%= form_tag(login_path) do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= submit_tag 'Login' %>
<% end %>